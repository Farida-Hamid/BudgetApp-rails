<div class='register'>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: 'field' %>
    <div class='line'></div>
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: 'field' %>
    <div class='line'></div>

    <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    <% end %>
    <div class= "header">
      <h2>Log in</h2>
      <%= f.submit "Log in", class:'submit' %>
    </div>
  <% end %>
</div>